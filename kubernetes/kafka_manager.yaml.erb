---
apiVersion: v1
kind: Service
metadata:
  name: kafka-manager-service
spec:
  selector:
    app: kafka-manager
  ports:
    - port: 80
      targetPort: 8080
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: kafka-manager-deployment
  labels:
    app: kafka-manager
spec:
  replicas: 1
  selector:
    matchLabels:
      app: kafka-manager
  template:
    metadata:
      labels:
        app: kafka-manager
    spec:
      containers:
        - name: kafka-manager
          image: "docker.ocf.berkeley.edu/kafka-manager:<%= version %>"
          resources:
            limits:
              memory: 512Mi
              cpu: 300m
          ports:
            - containerPort: 8080
          command:
            - sh
            - -c
            - ./kafka-manager-${KAFKA_MANAGER_DIST}/bin/kafka-manager -Dconfig.file=application.conf -Dhttp.port=8080 -Dapplication.home=.
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: kafka-manager-ingress
spec:
  rules:
    - host: kafka-manager.ocf.berkeley.edu
      http:
        paths:
          - backend:
              serviceName: kafka-manager-service
              servicePort: 80
    - host: kafka-manager.dev-kubernetes.ocf.berkeley.edu
      http:
        paths:
          - backend:
              serviceName: kafka-manager-service
              servicePort: 80
